<?xml version="1.0" encoding="UTF-8"?>
<odoo>


<record id="inherit_project_info_form" model="ir.ui.view">
    <field name="name">project.info.form.inherit</field>
    <field name="model">project.info</field>
    <field name="inherit_id" ref="custom_project_management.project_info_from_id"/> <!-- Replace module_name with the module containing the original view -->
    <field name="arch" type="xml">
        <field name="assigned_to_ids" position="before">
            <field name="businessUnit"/>
        </field>
    </field>
</record>

<record id="inherit_project_floors_form" model="ir.ui.view">
    <field name="name">project.floors.form.inherit</field>
    <field name="model">project.floors</field>
    <field name="inherit_id" ref="custom_project_management.project_floors_from_id"/> <!-- Replace module_name with the module containing the original view -->
    <field name="arch" type="xml">
        <field name="floor_progress_percentage" position="after">
            <field name="vjd_inventory_id"/>
        </field>
    </field>
</record>

<record id="inherit_project_flats_form" model="ir.ui.view">
    <field name="name">project.flats.form.inherit</field>
    <field name="model">project.flats</field>
    <field name="inherit_id" ref="custom_project_management.project_flats_from_id"/> <!-- Replace module_name with the module containing the original view -->
    <field name="arch" type="xml">
        <field name="flats_progress_percentage" position="after">
            <field name="vjd_inventory_id"/>
        </field>
    </field>
</record>

    
<record id="inherit_project_activity_name_form" model="ir.ui.view">
    <field name="name">project.activity.name.inherit</field>
    <field name="model">project.activity.name</field>
    <field name="inherit_id" ref="custom_project_management.project_activity_name_from_id"/> <!-- Replace module_name with the module containing the original view -->
    <field name="arch" type="xml">
        <field name="project_ids" position="after">
            <field name="construction_activity_group_ids" widget="many2many_tags"/>
            <field name="common_activity_group_ids" widget="many2many_tags"/>
            <field name="development_activity_group_ids" widget="many2many_tags"/>

        </field>
    </field>
</record>

<record id="inherit_project_activity_name_tree" model="ir.ui.view">
    <field name="name">project.activity.name.inherit</field>
    <field name="model">project.activity.name</field>
    <field name="inherit_id" ref="custom_project_management.project_activity_name_tree_id"/> <!-- Replace module_name with the module containing the original view -->
    <field name="arch" type="xml">
        <field name="realname" position="after">
            <field name="construction_activity_group_ids" widget="many2many_tags"/>
            <field name="development_activity_group_ids" widget="many2many_tags"/>
        </field>
    </field>
</record>




</odoo>

